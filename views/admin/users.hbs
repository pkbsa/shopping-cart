<div class="content">
    <h1 class="users" id="heading">Users</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">E-mail</th>
                <th scope="col">Password</th>
                <th scope="col">admin</th>
                <th scope="col">แก้ไข</th>
                <th scope="col">delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
            <tr>
                <td>{{this.email}}</td>
                <td>{{this.password}}</td>
                <td>{{this.admin}}</td>
                <td>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#{{this._id}}">
                        Edit
                    </button>
                </td>
                <td>
                    <a href="admin/delete-product/{{this._id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
            <div class="modal fade" id="{{this._id}}" tabindex="-1" aria-labelledby="{{this._id}}lLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="{{this._id}}Label">Edit Information</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form class="form" method="POST" action="/admin/user-edit">
                            <div class="modal-body">
                                <label for="email" class="form-label">E-mail</label>
                                <input type="text" id="email" name="email" class="form-control" value="{{this.email}}">
                            
                                <label for="admin" class="form-label">Admin     Permission</label>
                                <select id="admin" class="form-select" name="status" value="{{this.admin}}">
                                    <option value="0">No</option>
                                    <option value="1">Yes</option>
                                </select>
                                <input type="hidden" name="_id" value="{{ this._id }}">

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </tbody>
    </table>
</div>
<script src='/stylesheets/admin.js'></script>