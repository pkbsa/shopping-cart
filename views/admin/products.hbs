<div class="content">
    <h1 class="products" id="heading">Products</h1>
    <button class="btn btn-success pull-right" id="add" data-bs-toggle="modal" data-bs-target="#exampleModal">ADD PRODUCT</button>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">รูป</th>
                <th scope="col">ชื่อ</th>
                <th scope="col">คำอธิบาย</th>
                <th scope="col">ราคา (บาท)</th>
                <th scope="col">status</th>
                <th scope="col">แก้ไข</th>
                <th scope="col">delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each products}}
            <tr>
                <td><img src="{{this.imagePath.[0]}}" height="90px"></td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>{{this.status}}</td>
                <td>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#{{this._id}}">
                        Edit
                    </button>
                </td>
                <td>
                    <a href="/admin/delete-product/{{this._id}}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                </td>
            </tr>
            <div class="modal fade" id="{{this._id}}" tabindex="-1" aria-labelledby="{{this._id}}Label"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="{{this._id}}Label">Edit Information</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form class="form" method="POST" action="/admin/product-edit">
                            <div class="modal-body">
                                <label for="title" class="form-label">Title</label>
                                <input type="text" id="title" name="title" class="form-control" value="{{this.title}}">
                                <label for="description" class="form-label">Description</label>
                                <input type="text" id="description" name="description" class="form-control"
                                    value="{{this.description}}">
                                <label for="price" class="form-label">Price (บาท)</label>
                                <input type="number" id="price" name="price" class="form-control"
                                    value="{{this.price}}">
                                <label for="status" class="form-label">Status</label>
                                <select id="status" class="form-select" name="status" value="{{this.status}}">
                                    <option value="Available">Available</option>
                                    <option value="notAvailable">Not Available</option>
                                </select>
                                <input type="hidden" name="_id" value="{{ this._id }}">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary">Save changes</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {{/each}}
        </tbody>
    </table>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Add Product</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                 <form action="/admin/add-product/" method="POST" enctype="multipart/form-data">
                     <div class="modal-body">
                                <label for="title" class="form-label">Title</label>
                                <input type="text" id="title" name="title" class="form-control" value="{{this.title}}">
                                <label for="description" class="form-label">Description</label>
                                <input type="text" id="description" name="description" class="form-control">
                                <label for="price" class="form-label">Price (บาท)</label>
                                <input type="number" id="price" name="price" class="form-control">
                                <label for="status" class="form-label">Status</label>
                                <select id="status" class="form-select" name="status">
                                    <option value="Available">Available</option>
                                    <option value="notAvailable">Not Available</option>
                                </select>
                                <label for="formFile" class="form-label">อัพโหลดหลักฐานการชำระเงิน</label>
                                <input class="form-control" type="file" name="sampleFile" accept="image/*" id="formFile" required multiple>
                            </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script src='/stylesheets/admin.js'></script>