<div class="content"> 
  <h1> Order Management </h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ตะกร้า</th>
        <th scope="col">วันที่สั่ง</th>
        <th scope="col">ชื่อ</th>
        <th scope="col">ยอด (บาท)</th>
        <th scope="col">วืธีชำระเงิน</th>
        <th scope="col">สถานะ</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>
    <tbody>
      {{#each orders}}
      <tr>
        <th scope="row">{{this._id}}</th>
         <td>{{this.date}}</td>
        <td>{{this.name}}</td>
        <td>{{this.cart.totalPrice}}</td>
        <td>{{this.paymentMethod}}</td>
        <td>{{this.status}}</td>
        <td><button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Edit</button></td>
        <td><a href="#"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>