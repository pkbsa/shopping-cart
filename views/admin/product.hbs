<h1>Products</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">รูป</th>
            <th scope="col">ชื่อ</th>
            <th scope="col">คำอธิบาย</th>
            <th scope="col">ราคา</th>
            <th scope="col">แก้ไข</th>
            <th scope="col">delete</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        {{this}}
        <tr>
            <td><img src="{{ this.imagePath }}" height="90px"></td>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td><button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                    Edit
                </button>
            </td>
            <td><i class="fa fa-2x fa-trash"></i></td>
        </tr>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">แก้ไขข้อมูล</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form>
                            <label for="name">Name </label>
                            <input type="text" value="{{this.title}}" class="form-control" required>
                            <label for="description">Description </label>
                            <input type="text" value="{{this.description}}" class="form-control" required>
                            <label for="price">Price </label>
                            <input type="text" value="{{this.price}}" class="form-control" required>
                            <label for="image">Image </label>
                            <input type="text" value="{{this.imagePath}}" class="form-control" required>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </tbody>
</table>
{{orders}}